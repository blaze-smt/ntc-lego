@model LoginViewModel
<h2 class="text-center">Login</h2>
<div class="form-horizontal">
    <form method="POST">
        <div class="row justify-content-center">
            <div class="d-flex justify-content-center flex-column col-6">
                <div class="form-group">
                    <label asp-for="EmailAddress"></label>
                    <input asp-for="EmailAddress" class="form-control bg-secondary text-light" />
                    <span asp-validation-for="EmailAddress"></span>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="d-flex justify-content-center flex-column col-6">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control bg-secondary text-light" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
        </div>

        <div class="text-center">
            <p>
                <button type="submit" class="btn btn-primary" role="button">Login</button>
                <a asp-controller="Account" asp-action="Register">Create new account</a>
            </p>
        </div>
    </form>
</div>