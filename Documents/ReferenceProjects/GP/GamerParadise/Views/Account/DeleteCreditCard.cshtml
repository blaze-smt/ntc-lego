@model CreditCard

<h2 class="text-center">Are you sure you want to delete your credit card?</h2>
<div class="form-horizontal">
    <form method="post">
        <input type="hidden" asp-for="@Model.CardId" />
        <input type="hidden" for="id" id="DeletedCardId" />
        <div class="text-center">
            <div class="row justify-content-center">
                <div class="col-2 text-right py-3">
                    <label>Card Number</label>
                </div>
                <div class="col-2 text-left py-3">
                    <label>@Model.CardNum</label>
                </div>
            </div>
            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-danger text-light" />
                <a asp-controller="Home" asp-action="Profile" class="btn btn-success text-light"
                    role="button">Cancel</a>
            </div>
        </div>
    </form>
</div>