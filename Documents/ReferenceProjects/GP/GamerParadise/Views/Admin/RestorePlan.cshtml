@model IEnumerable<Plan>
<div>
    <h3>Restore Plan</h3>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Max Downloads</th>
            <th>Actions</th>
        </tr>
        @foreach (Plan p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.Price</td>
                <td>@p.MaxDownloads</td>
                <td><a asp-controller="Admin" asp-action="RestorePlan" asp-route-id="@p.PlanId"
                    class="btn btn-link">Restore</a></td>
            </tr>
        }
    </table>
</div>