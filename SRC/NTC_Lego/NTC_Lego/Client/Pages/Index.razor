@page "/"
@inject CurrentPage currentPage

<PageTitle>Index</PageTitle>

<div class="card p-3 shadow-sm">
    <h1>Hello, user!</h1>

    Welcome to NTC Lego.

    <div class="alert alert-secondary">
        <b>Please browse our available items.</b>
    </div>

    <div class="alert alert-info">
        <b>Try registering and logging in using the links in the upper left corner!</b>
    </div>

</div>

@code {
    protected override void OnInitialized()
    {
        currentPage.SetCurrentPageName("Home");
        base.OnInitialized();
    }

    void ChangeName() => currentPage.SetCurrentPageName("Name changed");
}