@page "/counter"
@*@attribute [Authorize]*@

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<p></p>

<AuthorizeView>
    <Authorized>
        <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

        <p></p>

        <span>You are authorized as...</span>
    </Authorized>
    <NotAuthorized>
        <span>You need to be authorized to use the counter.</span>
    </NotAuthorized>
</AuthorizeView>

<Footer />

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
