@page "/register"

<h3>Register</h3>

<div class="form-horizontal">
    <form method="post">
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input for="FirstName" class="form-control" />
            <span for="FirstName"></span>
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input for="LastName" class="form-control" />
            <span for="LastName"></span>
        </div>
        <div class="form-group">
            <label for="EmailAddress">Email Address</label>
            <input for="EmailAddress" class="form-control" />
            <span for="EmailAddress"></span>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input for="Password" class="form-control" />
            <span for="Password"></span>
        </div>
        <div class="form-group">
            <label for="PasswordConfirm">Password Confirmation</label>
            <input for="PasswordConfirm" class="form-control" />
            <span for="PasswordConfirm"></span>
        </div>

        @*<div asp-validation-summary="All"></div>*@
        <p>
            <button type="submit" class="btn btn-primary" role="button">Register</button>
        </p>
    </form>
</div>
