        <thead>
            <tr>
                <th scope="col">Order ID</th>
                <th scope="col">Date</th>
                <th scope="col">TotalPrice</th>
            </tr>
        </thead>
        <tbody>
        <!-- Table filler-->
        <tr>
            <td>1</td>
            <td>@DateTime.Now.ToString("MM/dd/yyyy")</td>
            <td>100</td>
        </tr>
        <tr>
            <td>2</td>
            <td>@DateTime.Now.ToString("MM/dd/yyyy")</td>
            <td>15</td>
        </tr>
        </tbody>

         
