@inherits LayoutComponentBase
@inject CurrentPage currentPage

<div class="page h-100">
    <AuthorizeView Roles="Admin">
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>
        </Authorized>
    </AuthorizeView>

    <main class="h-100">
        <div class="d-flex flex-row flex-wrap h-100">
            <div class="header-content-wrapper">
                <header class="site-header w-100 align-self-start bg-white">
                    <div class="container">
                        <div class="top-wrapper">
                            <div class="top-nav-wrapper">
                                <h1 class="top-content top-name">@currentPage.CurrentPageName</h1>
                                <ul class="top-content top-nav navbar">
                                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                                    <li class="nav-item"><a class="nav-link" href="/itemscatalog">Catalog</a></li>
                                    <AuthorizeView Roles="Admin">
                                        <Authorized>
                                            <li class="nav-item"><a class="nav-link" href="/dashboard">Admin</a></li>
                                        </Authorized>
                                    </AuthorizeView>
                                    <AuthorizeView>
                                        <Authorized>
                                            <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
                                        </Authorized>
                                    </AuthorizeView>
                                </ul>
                            </div>
                            <div class="top-cart-wrapper">
                                <AuthorizeView>
                                    <Authorized>
                                        <a class="top-content nav-link top-cart" href="/cart">Cart</a>
                                    </Authorized>
                                </AuthorizeView>
                                <AuthorizeView>
                                    <NotAuthorized>
                                        <a class="top-content register-btn" href="/register">Register</a>
                                    </NotAuthorized>
                                </AuthorizeView>
                                <LogInLogOutButton />
                                <img class="top-content top-logo" src="images/ntc-logo.png" />
                            </div>
                        </div>
                    </div>
                </header>

                <article class="content px-4 w-100 d-flex flex-column justify-content-center align-items-center align-self-center">
                    @Body
                </article>
            </div>

            <footer class="footer w-100 text-center align-self-end">
                <div>
                    NTC Lego 2022 &reg All Rights Reserved;
                </div>
            </footer>
        </div>
    </main>
</div>