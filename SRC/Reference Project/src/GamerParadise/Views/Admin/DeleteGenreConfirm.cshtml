@model Genre
<h2 class="text-center">Delete Genre Confirm</h2>
<div class="form-horizontal">
    <form method="POST">
        <input type="hidden" asp-for="GenreId" />
        <div class="text-center">
            <div class="form-group">
                <label>@Model.Name</label>
            </div>
            <div class="form-group">
                <label>@Model.Description</label>
            </div>
            <p>
                <button type="submit" class="btn btn-danger" role="button">Delete</button>
                <a asp-controller="Admin" asp-action="Genres" class="btn btn-success text-light"
                    role="button">Cancel</a>
            </p>
        </div>
    </form>
</div>