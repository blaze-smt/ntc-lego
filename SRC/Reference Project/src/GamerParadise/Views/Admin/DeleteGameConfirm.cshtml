@model Game
<h2 class="text-center">Delete Game Confirm</h2>
<div class="form-horizontal">
    <form method="POST">
        <input type="hidden" asp-for="GameId" />
        <div class="text-center">
            <div class="form-group">
                <label>@Model.Name</label>
            </div>
            <p>
                <button type="submit" class="btn btn-danger" role="button">Delete</button>
                <a asp-controller="Admin" asp-action="Games" class="btn btn-success text-light" role="button">Cancel</a>
            </p>
        </div>
    </form>
</div>