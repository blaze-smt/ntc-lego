@model Review
<h2 class="text-center">Delete their review</h2>
<div class="form-horizontal">
    <form method="POST">
        <input type="hidden" asp-for="ReviewId" />
        <div class="text-center">
            <div class="form-group">
                <label>@Model.Comment</label>
            </div>
            <p>
                <button type="submit" class="btn btn-danger" role="button">Delete</button>
                <a asp-controller="Admin" asp-action="Reviews" class="btn btn-success text-light"
                    role="button">Cancel</a>
            </p>
        </div>
    </form>
</div>