@model Review
<h2 class="text-center">Write your review for @Model.Game.Name</h2>
<div class="form-horizontal">
    <form method="post">
        <div class="text-center">
            <div class="row justify-content-center">
                <div class="d-flex justify-content-center flex-column col-2">
                    <div class="form-group">
                        <label asp-for="StarCount"></label>
                        <input asp-for="StarCount" class="form-control bg-secondary text-light" />
                        <span asp-validation-for="StarCount"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="d-flex justify-content-center flex-column col-6">

                    <div class="form-group">
                        <label asp-for="Comment"></label>
                        <textarea asp-for="Comment" class="form-control bg-secondary text-light" rows="3"></textarea>
                        <span asp-validation-for="Comment"></span>
                    </div>
                    <input type="hidden" asp-for="DateTimeWritten" value="@DateTime.Now" />
                </div>
            </div>
            <p>
                <button type="submit" class="btn btn-primary" role="button">Submit</button>
                <a asp-controller="Account" asp-action="Library" class="btn btn-success text-light"
                    role="button">Cancel</a>
            </p>
        </div>
    </form>
</div>